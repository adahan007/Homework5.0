<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/purple_200"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:padding="20dp"
        android:textColorHint="@color/black"
        android:hint="Username"
        android:id="@+id/et_One"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_marginTop="60dp"
        android:layout_height="70dp"
        app:layout_constraintTop_toTopOf="parent"
       android:textSize="20sp"
        android:textColor="@color/black"
        android:layout_marginHorizontal="20dp"
       />
    <EditText
        android:padding="20dp"
        android:textColorHint="@color/black"
        android:hint="Email"
        android:id="@+id/et_Sec"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@id/et_One"
        android:backgroundTint="@color/white"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:layout_marginHorizontal="20dp"
        />
    <EditText
        android:padding="20dp"
        android:textColorHint="@color/black"
        android:hint="Password"
        android:id="@+id/et_Thr"
        android:layout_marginTop="5dp"
        android:background="@color/white"
        android:layout_width="match_parent"
        app:layout_constraintTop_toBottomOf="@id/et_Sec"
        android:layout_height="70dp"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:layout_marginHorizontal="20dp"
        />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_I"
        app:cornerRadius="70dp"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:text="NEXT"
        android:layout_marginTop="50dp"
        android:backgroundTint="@color/white"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:layout_marginHorizontal="20dp"
        app:layout_constraintTop_toBottomOf="@+id/et_Thr"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Trivia"
        android:textSize="40sp"
        app:layout_constraintTop_toBottomOf="@id/btn_I"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="100dp"
        android:textColor="@color/black"
        android:textStyle="bold"
        />

</androidx.constraintlayout.widget.ConstraintLayout>